use File::Spec; 
use lib (File::Spec->updir, qw(/home/richard/Live /home/perlbug));
use Mail::Header;
use Perlbug::Cmd;
use strict;
use vars(qw($VERSION));
$|=1;
$VERSION = 1.01;

my $pb = Perlbug::Cmd->new(@ARGV);
$pb->debug(1, "$0: $pb");

# backup db
$pb->debug(1, "Command Line Interface started...");
my $ok = $pb->cmd; # loop
$pb->debug(1, "Command Line Interface finished...");

$pb->debug(1, "$0 -> $ok");
$pb->clean_up;
exit 0;
