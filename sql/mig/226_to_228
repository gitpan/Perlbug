	created datetime,
	ts timestamp(14),
	testid varchar(12) DEFAULT '' NOT NULL,
	version varchar(12) DEFAULT '' NOT NULL
);
INSERT INTO tm_test_version SELECT  
	now(), now(), testid, ''
FROM tm_test_version_data;

