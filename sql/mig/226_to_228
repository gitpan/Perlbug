  	userid varchar(16) DEFAULT '' NOT NULL,
	bugid varchar(12) DEFAULT '' NOT NULL
);
INSERT INTO tm_user_bug SELECT  
	now(), now(), userid, bugid 
FROM tm_bug_user_data;

# TM_BUG_CC
